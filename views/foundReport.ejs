<%- include('./shared/nav_side_bar') %>

		<!-- MAIN -->
		<main>
			<div class="table-data">
				<div class="order">
					<div class="head">
						<h3> Found Reports</h3>
					</div>
					<table class="center">
						<thead >
							<tr>
                                <th>#</th>
								<th>Freporter Name</th>
								<th>Lreporter Name</th>
								<th>Reporter Number</th>
								<th>Name</th>
								<th>Age</th>
								<th>Governorate</th>
								<th class="date" >Date</th>
								<th>Photo</th>
								<th>Orphanage</th>
								<th>Description</th>
                                <th>Actions</th>
							</tr>
							
						</thead>
			            <tbody>
			            		<% for(index=0; index<reports.length; index++){%>
				     		<tr>
							<td>
								<%=index+1%>
							</td>
							<td>
								<%= reports[index].firstReporterName%>
							</td>
							<td>
								<%= reports[index].lastReporterName%>
							</td>
							<td>
								<%= reports[index].phoneNumber%>
							</td>
							<td>
								<%= reports[index].childName%>
							</td>
							<td>
								<%= reports[index].age%>
							</td>
							<td>
								<%= reports[index].governorate%>
							</td>
							<%var dateString=reports[index].date%>
								<%var date=new Date(dateString)%>
									<%var month=date.toLocaleString('default', { month: 'short' });%>
										<%var day=date.getDate();%>
											<%var year=date.getFullYear();%>
												<%var displayDate=month + ' ' + (day < 10 ? '0' : '' ) + day + ' ' + year;%>
													<td>
				
														<%= displayDate%>
													</td>
						
							<td>
								<img src=<%= reports[index].image.secure_url%> alt="Photo">
							</td>
							<td>
								<%= reports[index].orphanageName%>
							</td>
							<td>
								<%= reports[index].description%>
							</td>
								<th>
								<a href="/editReport/<%=reports[index].id%>" id="a"><i class='bx bxs-edit-alt' ></i>									
								</a>
								<a href="/deleteFoundReport/<%=reports[index].id%>" id="b"><i class='bx bx-trash'></i>
								</a>
								</th>
							</tr>
						<%}%>
				</tbody>
					</table>
					</div>
					</div>
			

    </main>

		<!-- MAIN -->
<%- include('./shared/footer.ejs') %>

	
			